<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.MainActivity">

        <TextView
            android:id="@+id/vamos_as_compras_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="Vamos às Compras! "
            android:textSize="25dp"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/home_header_btn_comprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="@android:color/white"
            android:shadowRadius="5"
            android:text="Comprar"
            android:textAllCaps="false"
            android:textColor="#28BF79"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vamos_as_compras_txt"
            app:strokeColor="@color/design_default_color_on_secondary"
            app:strokeWidth="1dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/home_header_btn_comprar" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/imagem_promocao"
            app:layout_constraintTop_toBottomOf="@id/view_pager" />

        <TextView
            android:id="@+id/promocao_dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mais Promoçôes do dia!"
            android:textSize="20dp"
            android:textStyle="italic|bold"
            app:layout_constraintTop_toBottomOf="@id/ivLogo" />

        <TextView
            android:id="@+id/categoria_da_promocao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:gravity="start"
            android:text="@string/categoria"
            android:textSize="20dp"
            android:textStyle="italic|bold"
            app:layout_constraintTop_toBottomOf="@id/promocao_dia" />

        <TextView
            android:id="@+id/produto_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:text="Camisa de Futebol"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categoria_da_promocao" />
        <TextView
            android:id="@+id/desc_produto_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="R$ 60,00"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toEndOf="@id/produto_1"
            app:layout_constraintTop_toBottomOf="@id/categoria_da_promocao"/>

        <TextView
            android:id="@+id/produto_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Chuteira de Futebol"
            android:textStyle="italic"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/produto_1" />
        <TextView
            android:id="@+id/desc_produto_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 190,00"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toEndOf="@id/produto_1"
            app:layout_constraintTop_toBottomOf="@id/produto_1"/>

        <TextView
            android:id="@+id/produto_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Pendrive"
            android:textStyle="italic"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/produto_2" />
        <TextView
            android:id="@+id/desc_produto_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 40,00"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginLeft="45dp"
            app:layout_constraintStart_toEndOf="@id/produto_2"
            app:layout_constraintTop_toBottomOf="@id/produto_2"/>

        <TextView
            android:id="@+id/produto_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:text="Teclado sem fio"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/produto_3" />
        <TextView
            android:id="@+id/desc_produto_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 140,00"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginLeft="118dp"
            app:layout_constraintStart_toEndOf="@id/produto_3"
            app:layout_constraintTop_toBottomOf="@id/produto_3"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/desc_produto_4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>