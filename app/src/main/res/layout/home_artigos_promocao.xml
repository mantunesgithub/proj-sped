<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/categoria"
        android:textSize="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/camisa"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat"
            android:textSize="18dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/preco_80"
            android:textSize="18dp"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chuteira_futebol"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preco_120"
            android:fontFamily="@font/montserrat"
            android:layout_marginEnd="8dp"
            android:textSize="18dp"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meiao"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preco_60"
            android:fontFamily="@font/montserrat"
            android:layout_marginEnd="8dp"
            android:textSize="18dp"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teclado"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preco_100"
            android:fontFamily="@font/montserrat"
            android:textSize="18dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mouse"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preco_60"
            android:fontFamily="@font/montserrat"
            android:layout_marginEnd="8dp"
            android:textSize="18dp"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>