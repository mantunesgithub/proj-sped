<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/forma_pagamento_escolha_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Escolha uma forma de pagamento:"
        android:textSize="24sp"
        android:textStyle="normal" />
    <RadioGroup
        android:id="@+id/forma_pagamento_radio_grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/forma_pagamento_pix_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Pagamento com Pix"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/forma_pagamento_cartao_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Pagamento Cartão de Crédito"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/forma_pagamento_boleto_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Pagamento com Boleto Bancário"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp" />
    </RadioGroup>
           <Button
                android:id="@+id/forma_pagamento_botao_proximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginTop="24dp"
               android:layout_marginEnd="16dp"
               android:text="PRÓXIMO"
               android:textStyle="bold"/>
</LinearLayout>
